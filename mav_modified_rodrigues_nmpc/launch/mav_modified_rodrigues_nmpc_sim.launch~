<launch>
  <arg name="mav_name" default="hummingbird" />
  <arg name="namespace" default="$(arg mav_name)"/>
  <group ns="$(arg namespace)">
    <node name="mav_modified_rodrigues_nmpc" pkg="mav_modified_rodrigues_nmpc" type="modified_rodrigues_nmpc_node" respawn="true" output="screen">
      <remap from="odometry" to="odometry_sensor1/odometry" />
      <rosparam file="$(find mav_modified_rodrigues_nmpc)/resources/modified_rodrigues_nmpc_$(arg mav_name).yaml" />
      <rosparam file="$(find mav_disturbance_observer)/resources/disturbance_observer_$(arg mav_name).yaml"/>
      <param name="use_rc_teleop" value="false"/>
      <param name="verbose" value="true" />
      <param name="reference_frame" value="world"/>
    </node>
  </group>
</launch>


